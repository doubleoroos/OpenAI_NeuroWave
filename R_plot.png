import matplotlib.pyplot as plt
import numpy as np

# Generate data for a sine wave
x = np.linspace(0, 2 * np.pi, 100)
y = np.sin(x)

# Create the plot
plt.plot(x, y)
plt.title('Sample Sine Wave')
plt.xlabel('X-axis')
plt.ylabel('Y-axis')

# Save the plot as an image
plt.savefig('R_plot.png')
plt.close()